<script>
async function generate() {
  const link = document.getElementById("link").value.trim();
  const emoji = document.getElementById("emoji").value.trim();
  const status = document.getElementById("status");

  if (!link || !emoji) {
    status.textContent = "Mohon isi semua field.";
    return;
  }

  try {
    const res = await fetch(
      `https://react.whyux-xec.my.id/api/rch?link=${encodeURIComponent(link)}&emoji=${encodeURIComponent(emoji)}`,
      {
        headers: {
          "x-api-key": "602c0622dba6571d89e29560e3d4fe7652529883ea3a6c316803c4b8812ace3f"
        }
      }
    );

    const data = await res.json();

    status.textContent = data.error ? "Gagal" : `Berhasil dengan react: ${emoji}`;
  } catch {
    status.textContent = "Gagal";
  }
}

function resetForm(){
  document.getElementById("link").value = "";
  document.getElementById("emoji").value = "";
  document.getElementById("status").textContent = "Menunggu...";
}
</script>

